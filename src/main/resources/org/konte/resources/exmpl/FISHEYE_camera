DEF Sz .175
rule t {
  *{fov REF} {
    RSQU{layer 1 L 1 A -.3 sx 1.1 sy .15}
    TEXT{layer 2 s .07 y -0 x -7} }
}

rule example {
    box {   PUSH SQUARE
 s Sz y 1.5 rx 45 ry 45}
    box {   PUSH rndsh 4x4Popper
 4x4Popper 4x4Popper 4x4Popper
            s Sz y -.25
 rx -45 rz 45
 }
    box {   PUSH 4x4
            s Sz y -1 x 1.5
 rx -45 ry 45
 }
    box {   PUSH 16x16
            s Sz y -1 x -1.5
 rx -45 ry -45 }
}

rule Popper {   POP { } }
rule box {
    2* { ry 90 H -20}
    2* { z 1 L 1 S .5 H 240} Popper { z -.5 }
    2* { y -1 H 20 } Popper { rx 90 z .5 L .3 H 20 }
}



rule 4x4Popper {
    Popper { s .5 x -.5 y -.5 }
    Popper { s .5 x -.5 y .5 }
    Popper { s .5 x .5 y -.5 }
    Popper { s .5 x .5 y .5 }
}
rule 4x4 {
    SQUARE { s .5 x -.5 y -.5 }
    SQUARE { s .5 x -.5 y .5 }
    SQUARE { s .5 x .5 y -.5 }
    SQUARE { s .5 x .5 y .5 }
}
rule 16x16 {
    4x4 { s .5 x -.5 y -.5 }
    4x4 { s .5 x -.5 y .5 }
    4x4 { s .5 x .5 y -.5 }
    4x4 { s .5 x .5 y .5 }
}

