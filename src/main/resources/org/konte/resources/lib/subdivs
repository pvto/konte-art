      y2a3=(y2*(1.5+r)+y3*(1.5-r))/3; y2b3=(y2*(1.5-r)+y3*(1.5+r))/3;
      x3a1=(x3*(1.5+r)+x1*(1.5-r))/3; x3b1=(x3*(1.5-r)+x1*(1.5+r))/3;
      y3a1=(y3*(1.5+r)+y1*(1.5-r))/3; y3b1=(y3*(1.5-r)+y1*(1.5+r))/3; }} {
