    pop{{ x1=x2;y1=y2; x2=x2b3;y2=y2b3; x3=x1b2;y3=y1b2; o=2; }}
    pop{{ x1=x3;y1=y3; x2=x3b1;y2=y3b1; x3=x2b3;y3=y2b3; o=3; }}
  }
